<h1 class="mb-1 restaurant-show-title restaurant-title">登 入 餐 廳 清 單</h1>

<div class="container">
  <div class="col-9 col-md-7 col-lg-6 mx-auto mb-5">
    <div class="card card-body">
      <h1 class="text-center mb-3">Sign In</h1>
      {{> message}}
      <form action="/users/login" method="POST" class="row">
        <div class="form-group col-10 mx-auto">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="{{signinemail}}"
            required
          />
        </div>
        <div class="form-group col-10 mx-auto">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary col-5 mx-auto mb-3">Sign In</button>
        <a href="/auth/facebook" class="btn btn-info btn-block col-9 mx-auto">Facebook Login</a>
      </form>
      <p class="lead mt-2 col-11 mx-auto">
        No Account?
        <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>