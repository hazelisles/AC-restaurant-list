<div class="container header-text">
  <h2 class="h-text-one my-3">FIND YOUR FAVORITE RESTAURANT</h2>
  <h2 class="h-text-two my-3">Chose a restaurant to enjoy below</h2>
</div>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-3">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{ keyword }}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i
                class="fas fa-search mr-1"></i>Search</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    {{#unless restaurant}}
    <div class="alertText mb-3">
      <p>沒有搜尋到任何符合關鍵字：{{ keyword }} 的餐廳</p>
      <p>Can not find any Restaurant with keyword: {{ keyword }}</p>
    </div>
    {{/unless}}
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurant}}
        <div class="card mb-3">
          <a href="/restaurants/{{ this._id }}" class="text-secondary" style="text-decoration:none">
            <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }} image link crash">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>

              <span class="badge badge-pill badge-danger font-weight-bold p-1 mt-1">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
          </a>
          <div class="card-footer d-flex justify-content-end">
            <a href="/restaurants/{{ this._id }}/edit" class="btn btn-sm btn-outline-success">
              Edit
            </a>
            <form action="./restaurants/{{ this._id }}/delete" method="POST" style="display: inline;"
              onsubmit="return deleteConfirm();">
              <button class="btn btn-sm btn-outline-danger ml-2">Delete</button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>