<h1 class="mb-1 restaurant-show-title restaurant-title">修 改 餐 廳 資 訊</h1>
<div class="container mt-5 text-dark font-weight-bold">
  <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name"><i class="fas fa-signature pr-2"></i>餐廳名稱</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="{{ restaurant.name }} ..."
        value="{{ restaurant.name }}" required>
    </div>
    <div class="form-group">
      <label for="name_en"><i class="fas fa-signature pr-2"></i>餐廳英文名稱</label>
      <input type="text" class="form-control" id="name_en" name="name_en" placeholder="{{ restaurant.name_en }} ..."
        value="{{ restaurant.name_en }}">
    </div>
    <div class="form-group">
      <label for="category"><i class="fas fa-utensils pr-2"></i>餐廳分類</label>
      <input type="text" class="form-control" id="category" name="category" placeholder="{{ restaurant.category }} ..."
        value="{{ restaurant.category }}" required>
    </div>
    <div class="form-group">
      <label for="image"><i class="far fa-image pr-2"></i>餐廳照片連結</label>
      <input type="text" class="form-control" id="image" name="image" placeholder="{{ restaurant.image }} ..."
        value="{{ restaurant.image }}">
    </div>
    <div class="form-group">
      <label for="webpage"><i class="fas fa-home pr-2"></i>餐廳官方網站</label>
      <input type="text" class="form-control" id="webpage" name="webpage" placeholder="{{ restaurant.webpage }} ..."
        value="{{ restaurant.webpage }}">
    </div>
    <div class="form-group">
      <label for="phone"><i class="fas fa-mobile-alt pr-2"></i>餐廳電話</label>
      <input type="text" class="form-control" id="phone" name="phone" placeholder="{{ restaurant.phone }} ..."
        value="{{ restaurant.phone }}">
    </div>
    <div class=" form-group">
      <label for="location"><i class="fas fa-map-marker-alt pr-2"></i>餐廳地址</label>
      <input type="text" class="form-control" name="location" id="location" placeholder="{{ restaurant.location }} ..."
        value="{{ restaurant.location }}" required>
    </div>
    <div class=" form-group">
      <label for="google_map"><i class="fas fa-location-arrow pr-2 fa-xs"></i>Google地圖連結</label>
      <input type="text" class="form-control" name="google_map" id="google_map"
        placeholder="{{ restaurant.google_map }} ..." value="{{ restaurant.google_map }}">
    </div>
    <div class=" form-group">
      <label for="rating"><i class="far fa-star pr-2"></i>餐廳評分</label>
      <input type="number" class="form-control" id="rating" name="rating" min="1" max="5" step="0.1"
        placeholder="{{ restaurant.rating }} ..." value="{{ restaurant.rating }}" required>
    </div>
    <div class=" form-group">
      <label for="description"><i class="fas fa-scroll pr-2"></i>餐廳描述</label>
      <textarea class="form-control" id="description" name="description" rows="3"
        placeholder="{{ restaurant.description }} ...">{{ restaurant.description }}</textarea>
    </div>
    <button class="btn btn-success my-2 btn-motion" type="submit">Save</button>
  </form>
  <a href="/" class="btn btn-dark my-3 btn-motion">
    Back
  </a>
</div>