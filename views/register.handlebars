<h1 class="mb-1 restaurant-show-title restaurant-title">註 冊 餐 廳 清 單 帳 號</h1>

<div class="container">
  <div class="col-md-9 col-lg-7 mx-auto mb-5">
    <div class="card card-body">
      <h1 class="text-center mb-3">Register</h1>
      {{> message}}
      <form action="/users/register" method="POST" class="row">
        <div class="form-group col-10 mx-auto">
          <label for="name">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Nick Name"
            value="{{name}}"
          />
        </div>
        <div class="form-group col-10 mx-auto">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="{{email}}"
          />
        </div>
        <div class="form-group col-10 mx-auto">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
            value="{{password}}"
          />
        </div>
        <div class="form-group col-10 mx-auto">
          <label for="confirmPassword">Confirm Password</label>
          <input
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            class="form-control"
            placeholder="Confirm Password"
            value="{{confirmPassword}}"
          />
        </div>
        <button
          type="submit"
          class="btn btn-primary col-5 mx-auto mb-3"
        >Register</button>
        <a href="/auth/facebook" class="btn btn-info btn-block col-9 mx-auto">Facebook Register & Login</a>
      </form>
      <p class="lead mt-2 col-11 mx-auto">
        Have An Account?
        <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>